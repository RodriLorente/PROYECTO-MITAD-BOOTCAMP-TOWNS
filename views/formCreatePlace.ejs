<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ZenPlaces</title>
    <!-- Link de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <!-- link de font awesome -->
    <script src="https://kit.fontawesome.com/3947aef1e2.js" crossorigin="anonymous"></script>
  </head>
  <body class="container-fluid">

    <%- include('navbar') %>

    <!-- Sección del Formulario de creación de la localidad -->

    <section class="row">
      <div class="col-12">
        <form
        action="/places/createNewPlace/<%= result[0].id_town %>"
        method="post"
        enctype="multipart/form-data">
          <div class="mb-3">
            <label for="place_name" class="form-label">Nombre del lugar emblemático</label>
            <input
            type="text"
            class="form-control"
            id="place_name"
            name="place_name"
            >
        
          </div>
          <div class="mb-3">
            <label for="address" class="form-label">Dirección del lugar de interés</label>
            <input
            type="text"
            class="form-control"
            id="address"
            name="address"
            >
          </div>
          <div class="mb-3">
            <label for="town_img" class="form-label">Imagen del lugar de interés</label>
            <input
            type="file"
            class="form-control"
            id="place_img"
            name="img"
            >
          </div>
          
          <div>
            <h5 class="text-danger"><%= typeof message != 'undefined' ? message : null %></h5>
          </div>
          <button type="submit" class="btn btn-primary">Crear Punto de interés</button>
        </form>
      </div>
      <div class="col-12">
        <a href="/">
          <button class="btn btn-success">Volver a Inicio</button>
        </a>
      </div>
    </section>



    <%- include('footer') %>