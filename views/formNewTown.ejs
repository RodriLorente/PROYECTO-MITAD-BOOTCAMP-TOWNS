<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ZenPlaces</title>
    <!-- link de esta vista -->
    <link rel="stylesheet" href="/stylesheets/formCreateTown.css">
     <!-- mi link general de css -->
     <link rel="stylesheet" href="/stylesheets/general.css">
    <!-- Link de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <!-- link de font awesome -->
    <script src="https://kit.fontawesome.com/3947aef1e2.js" crossorigin="anonymous"></script>
  </head>
  <body class="container-fluid">

    <%- include('navbar') %>

    <!-- Sección del Formulario de creación de la localidad -->

    <section class="row section-form bg-section-form">
      <div class="col-12">
        <form
        action="/towns/createTown"
        method="post"
        enctype="multipart/form-data"
        class="formulario main-beige-text">
          <div class="mb-3">
            <label for="town_name" class="form-label">Nombre de la localidad</label>
            <input
            type="text"
            class="form-control"
            id="town_name"
            name="town_name"
            >
        
          </div>
          <div class="mb-3">
            <label for="province" class="form-label">Nombre de la provincia</label>
            <input
            type="text"
            class="form-control"
            id="province"
            name="province"
            >
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            >
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
            type="text"
            class="form-control"
            id="password"
            name="password"
            >
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Descripción de la localidad</label>
            <input
            type="text"
            class="form-control"
            id="description"
            name="description"
            >
          </div>
          <div class="mb-3">
            <label for="phone_number" class="form-label">Número de contacto</label>
            <input
            type="text"
            class="form-control"
            id="phone_number"
            name="phone_number"
            >
          </div>
          <div class="mb-3">
            <label for="town_img" class="form-label">Imagen de la localidad</label>
            <input
            type="file"
            class="form-control"
            id="town_img"
            name="img"
            style="color:#CAC2C1"
            >
          </div>
          <div>
            <h5 class="msg"><%= typeof message != 'undefined' ? message : null %></h5>
          </div>
          <button type="submit" class="boton mt-3">Crear localidad</button>
        </form>
      </div>
      <div class="col-12 text-center">
        <a href="/">
          <button class="boton mt-5">Volver a Inicio</button>
        </a>
      </div>
    </section>



    <%- include('footer') %>