<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ZenPlaces</title>
    <!-- Link de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <!-- link de font awesome -->
    <script src="https://kit.fontawesome.com/3947aef1e2.js" crossorigin="anonymous"></script>
  </head>
  <body class="container-fluid">

<%- include('navbar') %>

<!-- Sección 1: Presentación de la web -->
<section class="row">
  <div class="col-12">
    <h1>Visita el perfil de nuestras Localidades</h1>
  </div>
</section>

<!-- Sección 2: Vista de las localidades -->
<section class="row justify-content-evenly">
  <% result.forEach(( town ) => { %>
  <div class="card" style="width: 18rem;">
    <img src="/images/towns/<%= town.town_img %>" class="card-img-top" alt="...">
    <div class="card-body">
      <h4 class="card-title"><%= town.town_name %></h4>
      <h5 class="card-title">Provincia de: <%= town.province %></h5>
      
      <a href="/towns/oneTown/<%= town.id_town %>" class="btn btn-primary">Visita su perfil</a>
    </div>
  </div>
  <% }) %>
</section>


<%- include('footer') %>
